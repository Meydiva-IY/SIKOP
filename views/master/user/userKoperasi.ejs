<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Super Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body class="flex">
    
    <!-- Sidebar -->
    <% include ./partials/layout/sidebarS %>

    <!-- Main Content -->
    <div class="flex-1 ml-72">
        <div class="flex justify-between shadow-md p-4 bg-white">
            <h1 class="text-2xl"></h1>
            <div class="flex items-center">
                <span>Super Admin</span>
                <img src="/images/profile-user.png" class="w-10 h-10 rounded-full ml-2">
            </div>
        </div>

        <div class="flex-1 p-8">
            <div class="text-center mb-4">
                <h2 class="text-2xl font-bold">Data User</h2>
            </div>
            <div class="flex justify-end mb-4">
                <button class="text-white px-4 py-2 rounded flex items-center space-x-2" style="background-color: #5D8736;">
                    <span class="material-icons">add</span>
                    <span>Tambah User</span>
                </button>
            </div>        

            <!-- Table -->
            <div class="bg-white rounded-lg shadow overflow-x-auto">
                <table class="w-full">
                    <thead style="background-color: #5D8736;">
                        <tr>
                            <th class="px-6 py-3 text-left text-white">No.</th>
                            <th class="px-6 py-3 text-left text-white">Nama</th>
                            <th class="px-6 py-3 text-left text-white">Email</th>
                            <th class="px-6 py-3 text-left text-white">Password</th>
                            <th class="px-6 py-3 text-left text-white">Role</th>
                            <th class="px-6 py-3 text-left text-white">Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="border-b border-gray-200">
                            <td class="px-6 py-4">1</td>
                            <td class="px-6 py-4">Pimpinan</td>
                            <td class="px-6 py-4">pimpinan@gmail.com</td>
                            <td class="px-6 py-4">pimpinan123</td>
                            <td class="px-6 py-4">Pimpinan</td>
                            <td class="px-6 py-4">
                                <div class="flex space-x-2">
                                    <button class="border border-gray-300 rounded p-1"><span class="material-icons">edit</span></button>
                                    <button class="border border-gray-300 rounded p-1"><span class="material-icons">delete</span></button>
                                </div>
                            </td>
                        </tr>
                        <tr class="border-b border-gray-200">
                            <td class="px-6 py-4">2</td>
                            <td class="px-6 py-4">Admin Keuangan</td>
                            <td class="px-6 py-4">keuangan@gmail.com</td>
                            <td class="px-6 py-4">adminkeuangan123</td>
                            <td class="px-6 py-4">Admin Keuangan</td>
                            <td class="px-6 py-4">
                                <div class="flex space-x-2">
                                    <button class="border border-gray-300 rounded p-1"><span class="material-icons">edit</span></button>
                                    <button class="border border-gray-300 rounded p-1"><span class="material-icons">delete</span></button>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>