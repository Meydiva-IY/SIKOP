<header class="absolute top-0 left-0 w-full bg-white shadow-md z-50 p-5 flex justify-between items-center">
    <!-- Logo & Nama Koperasi -->
    <div class="flex items-center space-x-3">
        <img src="/images/logo.png" alt="Logo" class="w-14 h-14"> <!-- Ukuran lebih kecil -->
        <div>
            <p class="text-sm text-gray-600">KPN KOPERASI LLDIKTI 10</p>
            <h1 class="text-lg font-bold text-blue-900">LEMBAGA LAYANAN PENDIDIKAN TINGGI WILAYAH X</h1>
        </div>
    </div>

    <!-- Tutwuri Logo di Tengah -->
    <div class="absolute left-1/2 transform -translate-x-1/2">
        <img src="/images/tutwuri.png" alt="Tutwuri Logo" class="h-20"> <!-- Ukuran lebih kecil & posisi tengah -->
    </div>

    <!-- Tanggal -->
    <div class="flex items-center text-blue-700">
        <i class="fas fa-calendar-alt mr-2"></i>
        <span class="text-lg font-semibold">
            <%= new Date().toLocaleDateString('id-ID', { year: 'numeric', month: 'long', day: 'numeric' }) %>
        </span>
    </div>
</header>