<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Data Pinjaman</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body class="flex bg-gray-100">
     <!-- Sidebar -->
     <%- include('../../sidebar') %>

    <!-- Main Content -->
    <div class="flex-1 ml-72">
        <div class="fixed top-0 left-72 right-0 flex justify-between shadow-md p-4 bg-white z-20">
            <h1 class="text-2xl"></h1>
            <div class="flex items-center">
                <span>Admin Keuangan</span>
                <img src="/images/profile-user.png" class="w-10 h-10 rounded-full ml-2">
            </div>
        </div>

        <div class="flex-1 p-8 mt-12">
            <!-- Fixed Search and Filter -->
            <div class="fixed top-16 left-72 right-0 bg-gray-100 z-10 p-4">
                <div class="text-center mb-4">
                    <h2 class="text-2xl font-bold mt-4 mb-6">Data Pinjaman</h2>
                </div>

                <div class="flex justify-between mb-3">
                    <div class="flex space-x-2">
                        <input type="text" placeholder="Cari Anggota" class="px-3 py-1 border rounded-md focus:outline-none">
                        <button class="text-white px-3 py-1 rounded-md focus:outline-none" style="background-color: #5D8736;">
                            <span class="material-icons">search</span>
                        </button>
                        <button class="text-white px-3 py-1 rounded-md focus:outline-none" style="background-color: #5D8736;">
                            <span class="material-icons">filter_list</span>
                        </button>
                    </div>
                    <a href="/pinjamanKeuangan/tambahPinjaman" class="text-white px-3 py-1 rounded flex items-center space-x-1" style="background-color: #5D8736;">
                        <span class="material-icons">add</span>
                        <span>Pinjaman Baru</span>
                    </a>
                </div>
            </div>

            <!-- Scrollable Table -->
            <div class="bg-white rounded-lg shadow overflow-x-auto mt-36" style="max-height: calc(100vh - 280px); overflow-y: auto;">
                <table class="w-full">
                    <thead style="position: sticky; top: 0; z-index: 5; background-color: #5D8736;">
                        <tr>
                            <th class="px-6 py-3 text-left text-white">No.</th>
                            <th class="px-6 py-3 text-left text-white">Nama Anggota</th>
                            <th class="px-6 py-3 text-left text-white">Kategori</th>
                            <th class="px-6 py-3 text-left text-white">Jumlah Pinjaman</th>
                            <th class="px-6 py-3 text-left text-white">Jangka Waktu</th>
                            <th class="px-6 py-3 text-left text-white">Margin Persen</th>
                            <th class="px-6 py-3 text-left text-white">Angsuran Pokok</th>
                            <th class="px-6 py-3 text-left text-white">Margin per Bulan</th>
                            <th class="px-6 py-3 text-left text-white">Total Angsuran</th>
                            <th class="px-6 py-3 text-left text-white">Sisa Piutang</th>
                            <th class="px-6 py-3 text-left text-white">Tanggal Perjanjian</th>
                            <th class="px-6 py-3 text-left text-white">Status</th>
                            <th class="px-6 py-3 text-left text-white">Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (pinjaman && pinjaman.length > 0) { %>
                          <% pinjaman.forEach((item, index) => { %>
                            <tr class="border-b border-gray-200">
                              <td class="px-6 py-4"><%= index + 1 %></td>
                              <td class="px-6 py-4"><%= item.nama_anggota %></td>
                              <td class="px-6 py-4"><%= item.kategori %></td>
                              <td class="px-6 py-4"><%= item.jumlah_pinjaman.toLocaleString() %></td>
                              <td class="px-6 py-4"><%= item.jangka_waktu %> Bulan</td>
                              <td class="px-6 py-4"><%= item.margin_persen %>%</td>
                              <td class="px-6 py-4"><%= item.angsuran_pokok.toLocaleString() %></td>
                              <td class="px-6 py-4"><%= item.margin_per_bulan.toLocaleString() %></td>
                              <td class="px-6 py-4"><%= item.total_angsuran.toLocaleString() %></td>
                              <td class="px-6 py-4"><%= item.sisa_piutang.toLocaleString() %></td>
                              <td class="px-6 py-4"><%= item.tanggal_perjanjian.toISOString().split('T')[0] %></td>
                              <td class="px-6 py-4"><%= item.ket_status %></td>
                              <td class="px-6 py-4">
                                <div class="flex space-x-2">
                                  <button class="border border-gray-300 rounded p-1"><span class="material-icons">edit</span></button>
                                  <button onclick="hapusPinjaman('<%= item.id %>')" class="border border-gray-300 rounded p-1"><span class="material-icons">delete</span></button>
                                </div>
                              </td>
                            </tr>
                          <% }) %>
                        <% } else { %>
                          <tr>
                            <td colspan="12" class="px-6 py-4 text-center">Tidak ada data pinjaman.</td>
                          </tr>
                        <% } %>
                      </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function hapusPinjaman(id) {
            Swal.fire({
                title: 'Konfirmasi Hapus Data',
                html: 'Apakah Anda yakin ingin menghapus data ini? Tindakan ini tidak dapat dibatalkan.',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d9534f', // Warna merah untuk tombol "Hapus"
                cancelButtonColor: '#f0f0f0', // Warna abu-abu untuk tombol "Batal"
                confirmButtonText: 'Hapus',
                cancelButtonText: 'Batal',
                customClass: {
                    popup: 'custom-swal',
                    title: 'custom-title',
                    icon: 'custom-icon',
                    confirmButton: 'custom-confirm-button',
                    cancelButton: 'custom-cancel-button',
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch(`/pinjaman/hapus/${id}`, {
                        method: 'DELETE',
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            Swal.fire(
                                'Dihapus!',
                                'Data berhasil dihapus.',
                                'success'
                            ).then(() => {
                                window.location.reload(); // Reload halaman untuk memperbarui data
                            });
                        } else {
                            Swal.fire(
                                'Gagal!',
                                'Gagal menghapus data.',
                                'error'
                            );
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        Swal.fire(
                            'Error!',
                            'Terjadi kesalahan saat menghapus data.',
                            'error'
                        );
                    });
                }
            });
        }
    </script>
    
    <style>
        .custom-swal {
            border-radius: 10px;
            padding: 20px;
        }
    
        .custom-title {
            color: #b22222; /* Warna merah */
            font-weight: bold;
            font-size: 18px;
        }
    
        .custom-icon {
            color: #b22222; /* Warna ikon */
        }
    
        .swal2-html-container {
            font-size: 16px;
            color: #4a4a4a;
        }
    
        .custom-confirm-button {
            background-color: #d9534f;
            color: white;
            border-radius: 5px;
            padding: 10px 20px;
        }
    
        .custom-cancel-button {
            background-color: #f0f0f0;
            color: #4a4a4a;
            border-radius: 5px;
            padding: 10px 20px;
            border: 1px solid #ccc;
        }
    </style>
</body>
</html>