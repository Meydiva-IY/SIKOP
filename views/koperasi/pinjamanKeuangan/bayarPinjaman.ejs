<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Admin Keuangan</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body class="flex bg-gray-100">
    <!-- Sidebar -->
    <div class="w-72 text-white min-h-screen p-4 fixed" style="z-index: 10;background-color: #5D8736;">
        <div class="flex items-center mb-8">
            <img src="/public/images/logo.png" alt="Logo" class="w-16 h-16 mr-7">
            <div>
                <h1 class="text-2xl font-bold">SIKOP</h1>
                <p class="text-sm">Sistem Informasi Koperasi</p>
            </div>
        </div>
        <nav>
            <ul>
                <li class="mb-4">
                    <a href="/views/dashboardKeuangan.ejs" class="flex items-center block p-6 py-3 hover:bg-green-900 rounded">
                        <img src="/public/images/vectordasbor.png" alt="lihat data icon" class="w=5 h-5 ">
                        <span class="ml-2 text-xl ml-5">Dashboard</span>
                    </a>
                </li>
                <li class="mb-4">
                    <a href="/views/koperasi/simpananKeuangan/lihatsimpanan.ejs" class="flex items-center block p-6 py-3 hover:bg-green-900 rounded">
                    <span class="material-icons">account_balance_wallet</span>
                    <span class="ml-2 text-xl ml-5">Simpanan</span>
                    </a>
                </li>
                <li class="mb-4">
                    <a href="/views/koperasi/pinjamankeuangan/lihatPinjaman.ejs" class="flex items-center block p-6 py-3 hover:bg-green-900 rounded">
                    <span class="material-icons">credit_card</span>
                    <span class="ml-2 text-xl ml-5">Pinjaman</span>
                    </a>
                </li>
                <li>
                    <button onclick="toggleDropdown()" class="flex items-center justify-between w-full focus:outline-none">
                        <div class="flex items-center">
                            <a href="#" class="flex items-center block p-6 py-3">
                                <span class="material-icons">attach_money</span>
                                <span class="ml-2 text-xl ml-5">Kredit</span>
                            </a>
                        </div>
                        <img src="/public/images/angle-small-down.png" alt="dropdown icon" class="w-6 h-6 transform transition-transform" id="dropdownIcon">
                    </button>
                    <ul id="dropdownMenu" class="pl-6 hidden">
                        <li class="mb-2">
                            <a href="/views/koperasi/kreditKeuangan/kreditBarang/lihatKreditBarang.ejs" class="block p-3 py-3 text-lg hover:bg-green-900 rounded">Kredit Barang</a>
                        </li>
                        <li class="mb-2">
                            <a href="/views/koperasi/kreditKeuangan/kreditElektronik/lihatKreditElektro.ejs" class="block p-3 py-3 text-lg hover:bg-green-900 rounded">Kredit Elektronik</a>
                        </li>
                        <li class="mb-2">
                            <a href="/views/koperasi/kreditKeuangan/kreditMotor/lihatKreditMotor.ejs" class="block p-3 py-3 text-lg hover:bg-green-900 rounded">Kredit Motor</a>
                        </li>
                        <li class="mb-2">
                            <a href="/views/koperasi/kreditKeuangan/kreditUmroh/lihatKreditUmroh.ejs" class="block p-3 py-3 text-lg hover:bg-green-900 rounded">Kredit Umroh</a>
                        </li>
                    </ul>
                </li>
            </ul>
        </nav>
    </div>

    <script>
        function toggleDropdown() {
            const dropdownMenu = document.getElementById('dropdownMenu');
            dropdownMenu.classList.toggle('hidden');
        }
    </script>

    <!-- Main Content -->
    <div class="flex-1 ml-72 p-8">
        <div class="fixed top-0 left-72 right-0 flex justify-between shadow-md p-4 bg-white z-20">
            <h1 class="text-2xl"></h1>
            <div class="flex items-center">
                <span>Admin Keuangan</span>
                <img src="/public/images/profile-user.png" class="w-10 h-10 rounded-full ml-2">
            </div>
        </div>

        <div class="mt-20 text-center">
            <h1 class="text-2xl font-bold mb-8">Bayar Angsuran</h1>
        </div>

        <!-- Informasi Kredit -->
        <div class="bg-blue-100 p-6 rounded-md shadow-md mb-6">
            <h3 class="text-xl font-semibold mb-4">Informasi Kredit</h3>
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <p>No. Anggota</p>
                    <p class="font-bold">001</p>
                </div>
                <div>
                    <p>Nama Anggota</p>
                    <p class="font-bold">Adriani Adnani</p>
                </div>
                <div>
                    <p>Harga Pokok</p>
                    <p class="font-bold">262.500</p>
                </div>
                <div>
                    <p>Jangka Waktu (bulan)</p>
                    <p class="font-bold">9</p>
                </div>
                <div>
                    <p>Angsuran Ke</p>
                    <p class="font-bold">5 dari 9</p>
                </div>
                <div>
                    <p>Sisa Piutang</p>
                    <p class="font-bold">105.000</p>
                </div>
                <div>
                    <p>Angsuran Per Bulan</p>
                    <p class="font-bold">28.000</p>
                </div>
            </div>
        </div>

        <!-- Detail Pembayaran -->
        <div class="bg-green-100 p-6 rounded-md shadow-md mb-6">
            <h3 class="text-xl font-semibold mb-4">Detail Pembayaran</h3>
            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700">Tanggal Pembayaran</label>
                    <input type="text" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm px-3 py-2">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700">Jumlah Bayar</label>
                    <input type="text" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm px-3 py-2">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700">Keterangan</label>
                    <input type="text" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm px-3 py-2">
                </div>
            </div>
        </div>

        <!-- Rincian Pembayaran -->
        <div class="bg-white p-6 rounded-md shadow-md mb-6">
            <h3 class="text-xl font-semibold mb-4">Rincian Pembayaran</h3>
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tanggal</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Angsuran Ke</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Jumlah</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Keterangan</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <tr>
                        <td class="px-6 py-4 whitespace-nowrap">2023-07-16</td>
                        <td class="px-6 py-4 whitespace-nowrap">4</td>
                        <td class="px-6 py-4 whitespace-nowrap">28.000</td>
                        <td class="px-6 py-4 whitespace-nowrap"></td>
                    </tr>
                    <tr>
                        <td class="px-6 py-4 whitespace-nowrap">2023-06-16</td>
                        <td class="px-6 py-4 whitespace-nowrap">3</td>
                        <td class="px-6 py-4 whitespace-nowrap">28.000</td>
                        <td class="px-6 py-4 whitespace-nowrap"></td>
                    </tr>
                    <tr>
                        <td class="px-6 py-4 whitespace-nowrap">2023-05-16</td>
                        <td class="px-6 py-4 whitespace-nowrap">2</td>
                        <td class="px-6 py-4 whitespace-nowrap">28.000</td>
                        <td class="px-6 py-4 whitespace-nowrap"></td>
                    </tr>
                    <tr>
                        <td class="px-6 py-4 whitespace-nowrap">2023-04-16</td>
                        <td class="px-6 py-4 whitespace-nowrap">1</td>
                        <td class="px-6 py-4 whitespace-nowrap">28.000</td>
                        <td class="px-6 py-4 whitespace-nowrap"></td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Buttons -->
        <div class="flex space-x-4 mt-8">
            <button class="flex-1 border py-2 px-4 rounded-md" style="border-color: #5D8736; color: #5D8736;">Batal</button>
            <button class="flex-1 bg-[#5D8736] text-white py-2 px-4 rounded-md" style="background-color: #5D8736;">Simpan</button>
        </div>
    </div>
</body>
</html>