<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Admin Keuangan</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body class="flex bg-gray-100">
    
    <!-- Sidebar -->
    <% include ./partials/layout/sidebarK %>

    <!-- Main Content -->
    <div class="flex-1 ml-72 p-8">
        <div class="fixed top-0 left-72 right-0 flex justify-between shadow-md p-4 bg-white z-20">
            <h1 class="text-2xl"></h1>
            <div class="flex items-center">
                <span>Admin Keuangan</span>
                <img src="/images/profile-user.png" class="w-10 h-10 rounded-full ml-2">
            </div>
        </div>

        <div class="mt-20 text-center">
            <h1 class="text-2xl font-bold mb-8">Tambah Pinjaman Baru</h1>
        </div>

        <div class="space-y-6">
            <!-- Data Anggota -->
            <div class="bg-gray-200 p-6 rounded-md shadow-md">
                <h3 class="text-xl font-semibold mb-4">Data Anggota</h3>
                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Nomor Anggota</label>
                        <input type="text" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm px-3 py-2">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Nama Anggota</label>
                        <input type="text" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm px-3 py-2">
                    </div>
                </div>
            </div>

            <!-- Data Pinjaman -->
            <div class="bg-gray-200 p-6 rounded-md shadow-md">
                <h3 class="text-xl font-semibold mb-4">Data Pinjaman</h3>
                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Jumlah Pinjaman</label>
                        <input type="number" id="jumlahPinjaman" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm px-3 py-2">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Kategori Pinjaman</label>
                        <select class="mt-1 block w-full border-gray-300 rounded-md shadow-sm px-3 py-2">
                            <option>Pilih Kategori</option>
                            <option>Jangka Panjang</option>
                            <option>Jangka Pendek</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Jangka Waktu (Bulan)</label>
                        <input type="number" id="jangkaWaktu" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm px-3 py-2">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Pokok</label>
                        <input type="number" id="pokok" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm px-3 py-2">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Margin (%)</label>
                        <input type="number" id="margin" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm px-3 py-2">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Tanggal Perjanjian</label>
                        <input type="date" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm px-3 py-2">
                    </div>
                </div>
            </div>

            <!-- Hasil Perhitungan -->
            <div class="bg-blue-100 p-6 rounded-md shadow-md mb-20">
                <h3 class="text-xl font-semibold mb-4">Hasil Perhitungan</h3>
                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Total Angsuran</label>
                        <input type="text" id="totalAngsuran" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm px-3 py-2" readonly>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Margin per Bulan</label>
                        <input type="text" id="marginPerBulan" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm px-3 py-2" readonly>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Total Angsuran per Bulan</label>
                        <input type="text" id="totalAngsuranPerBulan" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm px-3 py-2" readonly>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Total Margin</label>
                        <input type="text" id="totalMargin" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm px-3 py-2" readonly>
                    </div>
                </div>
            </div>

            <!-- Buttons -->
            <div class="flex space-x-4">
                <button class="flex-1 border border-green-800 text-green-800 py-2 px-4 rounded-md mt-4" style="border-color: #5D8736; color: #5D8736;">Batal</button>
                <button class="flex-1 text-white py-2 px-4 rounded-md mt-4" style="background-color: #5D8736;">Simpan</button>
            </div>
        </div>
    </div>

    <script>
        function toggleDropdown() {
            const dropdownMenu = document.getElementById('dropdownMenu');
            dropdownMenu.classList.toggle('hidden');
        }
        
        document.addEventListener('DOMContentLoaded', function() {
            const jumlahPinjamanInput = document.getElementById('jumlahPinjaman');
            const jangkaWaktuInput = document.getElementById('jangkaWaktu');
            const pokokInput = document.getElementById('pokok');
            const marginInput = document.getElementById('margin');

            const totalAngsuranOutput = document.getElementById('totalAngsuran');
            const marginPerBulanOutput = document.getElementById('marginPerBulan');
            const totalAngsuranPerBulanOutput = document.getElementById('totalAngsuranPerBulan');
            const totalMarginOutput = document.getElementById('totalMargin');

            function calculateResults() {
                const jumlahPinjaman = parseFloat(jumlahPinjamanInput.value) || 0;
                const jangkaWaktu = parseFloat(jangkaWaktuInput.value) || 0;
                const margin = parseFloat(marginInput.value) || 0;

                const totalMargin = (jumlahPinjaman * (margin / 100)) * jangkaWaktu;
                const totalAngsuran = jumlahPinjaman + totalMargin;
                const marginPerBulan = totalMargin / jangkaWaktu;
                const totalAngsuranPerBulan = totalAngsuran / jangkaWaktu;

                totalAngsuranOutput.value = totalAngsuran.toFixed(2);
                marginPerBulanOutput.value = marginPerBulan.toFixed(2);
                totalAngsuranPerBulanOutput.value = totalAngsuranPerBulan.toFixed(2);
                totalMarginOutput.value = totalMargin.toFixed(2);
            }

            jumlahPinjamanInput.addEventListener('input', calculateResults);
            jangkaWaktuInput.addEventListener('input', calculateResults);
            marginInput.addEventListener('input', calculateResults);
        });
    </script>
</body>
</html>
