<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Pimpinan</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="flex">
    
    <!-- Sidebar -->
    <% include ./partials/layout/sidebarP %>

    <!-- Main Content -->
    <div class="flex-1 bg-gray-100 ml-72">
        <div class="flex justify-between shadow-md p-4 bg-white">
            <h1 class="text-2xl"></h1>
            <div class="flex items-center">
                <span>Pimpinan</span>
                <img src="/images/profile-user.png" class="w-10 h-10 rounded-full ml-2">
            </div>
        </div>

    <div class="flex-1 p-8">
        <h1 class="text-4xl font-bold text-center mb-10">Data Kredit Koperasi</h1>
        
        <!-- Filter Section -->
        <div class="bg-white rounded-lg shadow p-10 mb-10" style="background: linear-gradient(to right, rgb(93, 135, 54) 10%, rgba(93, 135, 54, 0.8) 50%, rgba(93, 135, 54, 0.4) 70%), url('//images/backroundLldikti10.jpeg'); background-size:cover; background-position: right 20%;">
            <div class="flex gap-9">
                <div>
                    <label class="block mb-2 text-xl font-semibold text-white">Tahun</label>
                    <select class="border rounded-lg px-5 py-3 w-60 bg-white">
                        <option>Pilih Tahun</option>
                    </select>
                </div>
                <div>
                    <label class="block mb-2 text-xl font-semibold text-white">Bulan</label>
                    <select class="border rounded-lg px-5 py-3 w-60 bg-white">
                        <option>Pilih Bulan</option>
                    </select>
                </div>
                <div>
                    <label class="block mb-2 text-xl font-semibold text-white">Jenis Kredit</label>
                    <select class="border rounded-lg px-5 py-3 w-60 bg-white">
                        <option>Pilih Kredit</option>
                    </select>
                </div>
            </div>
            <button style="background-color: #fff" class="text-base  text-black font-base px-3 py-3 rounded mt-9">Tampilkan Data</button>
        </div>
        

        <!-- Table -->
        <div class="bg-white rounded-lg shadow overflow-x-auto">
            <table class="w-full">
                <thead style="background-color: #5D8736;">
                    <tr>
                    <th class="px-6 py-3 text-left text-white">No</th>
                    <th class="px-6 py-3 text-left text-white">NIP</th>
                    <th class="px-6 py-3 text-left text-white">Nama</th>
                    <th class="px-6 py-3 text-left text-white">Jenis Kredit</th>
                    <th class="px-6 py-3 text-left text-white">Jatuh Tempo</th>
                    <th class="px-6 py-3 text-left text-white">Jumlah</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="border-b border-gray-200">
                        <td class="px-6 py-4">1</td>
                        <td class="px-6 py-4">197810092005011002</td>
                        <td class="px-6 py-4">AHMAD HIDAYAT S.Psi</td>
                        <td class="px-6 py-4">ABCD</td>
                        <td class="px-6 py-4">15</td>
                        <td class="px-6 py-4">150.000</td>
                    </tr>
                    <tr class="border-b border-gray-200">
                        <td class="px-6 py-4">2</td>
                        <td class="px-6 py-4">198505122010012015</td>
                        <td class="px-6 py-4">SITI NURHALIZA M.Pd</td>
                        <td class="px-6 py-4">EFGH</td>
                        <td class="px-6 py-4">20</td>
                        <td class="px-6 py-4">200.000</td>
                    </tr>
                    <tr> 
                        <td class="px-6 py-4">3</td>
                        <td class="px-6 py-4">198505122010012016</td>
                        <td class="px-6 py-4">BUDI SANTOSO M.Kom</td>
                        <td class="px-6 py-4">IJKL</td>
                        <td class="px-6 py-4">25</td>
                        <td class="px-6 py-4">250.000</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="mt-4 flex items-center justify-between">
            <div class="text-sm text-gray-600">
                Menampilkan 1-10 dari 100 data
            </div>
            
            <div class="flex gap-2">
                <button class="px-3 py-1 border rounded" disabled>Previous</button>
                <button class="px-3 py-1 border text-white rounded" style="background-color: #5D8736">1</button>
                <button class="px-3 py-1 border rounded">2</button>
                <button class="px-3 py-1 border rounded">3</button>
                <button class="px-3 py-1 border rounded">4</button>
                <span class="px-3 py-1">...</span>
                <button class="px-3 py-1 border rounded">11</button>
                <button class="px-3 py-1 border rounded">Next</button>
            </div>

            <button onclick="cetakLaporan()" style="background-color: #5D8736" class="text-white px-4 py-2 rounded">
                Cetak Laporan
            </button>
            
            <script>
            function cetakLaporan() {
                const tahun = document.getElementById('tahun').value;
                const bulan = document.getElementById('bulan').value;
                const jenis = document.getElementById('jenis').value;
                
                if (!tahun || !bulan || !jenis) {
                    alert('Mohon lengkapi semua filter terlebih dahulu');
                    return;
                }
                
                const url = `/report/${window.location.pathname.includes('kredit') ? 'kredit' : 
                                    window.location.pathname.includes('pinjaman') ? 'pinjaman' : 
                                    'simpanan'}?tahun=${tahun}&bulan=${bulan}&jenis=${jenis}`;
                
                window.open(url, '_blank');
            }

            </script>
            
        </div>
    </div>
</body>
</html>
