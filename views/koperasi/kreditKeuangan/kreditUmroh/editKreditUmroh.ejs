<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Kredit Umroh</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body class="flex bg-white">
    <!-- Sidebar -->
    <%- include('../../../sidebar') %>

    <!-- Main Content -->
    <div class="flex-1 ml-72 p-8">
        <div class="fixed top-0 left-72 right-0 flex justify-between shadow-md p-4 bg-white z-20">
            <h1 class="text-2xl"></h1>
            <div class="flex items-center">
                <span>Admin Keuangan</span>
                <img src="/images/profile-user.png" class="w-10 h-10 rounded-full ml-2">
            </div>
        </div>

        <div class="mt-20 text-center">
            <h1 class="text-2xl font-bold mb-8">Edit Kredit Umroh</h1>
        </div>

        <form action="/kreditUmroh/edit/<%= kreditUmroh.id %>" method="POST" class="space-y-6">
            <!-- Data Anggota -->
            <div class="bg-gray-200 p-6 rounded-md shadow-md">
                <h3 class="text-xl font-semibold mb-4">Data Anggota</h3>
                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Nomor Anggota</label>
                        <input type="text" name="id_anggota" value="<%= kreditUmroh.id_anggota %>" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm px-3 py-2" readonly>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Nama Anggota</label>
                        <input type="text" value="<%= kreditUmroh.nama_anggota %>" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm px-3 py-2" readonly>
                    </div>
                </div>
            </div>

            <!-- Data Kredit Umroh -->
            <div class="bg-gray-200 p-6 rounded-md shadow-md">
                <h3 class="text-xl font-semibold mb-4">Data Kredit Umroh</h3>
                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Jumlah Pinjaman</label>
                        <input type="text" name="jumlah_pinjaman" value="<%= kreditUmroh.jumlah_pinjaman %>" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm px-3 py-2" oninput="validateNumberInput(this)">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Jangka Waktu (Bulan)</label>
                        <input type="number" name="jangka_waktu" value="<%= kreditUmroh.jangka_waktu %>" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm px-3 py-2">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Margin (%)</label>
                        <input type="text" name="margin_persen" value="<%= kreditUmroh.margin_persen %>" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm px-3 py-2" oninput="validateNumberInput(this)">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Tanggal Perjanjian</label>
                        <input type="date" name="tanggal_mulai" value="<%= kreditUmroh.tanggal_mulai.toISOString().split('T')[0] %>" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm px-3 py-2">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Angsuran Pokok</label>
                        <input type="text" name="pokok" value="<%= kreditUmroh.pokok %>" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm px-3 py-2" oninput="validateNumberInput(this)">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Angsuran Margin</label>
                        <input type="text" name="margin" value="<%= kreditUmroh.margin %>" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm px-3 py-2" oninput="validateNumberInput(this)">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Total Angsuran</label>
                        <input type="text" name="total_angsuran" value="<%= kreditUmroh.total_angsuran %>" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm px-3 py-2" oninput="validateNumberInput(this)">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Sisa Piutang</label>
                        <input type="text" name="sisa_piutang" value="<%= kreditUmroh.sisa_piutang %>" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm px-3 py-2" oninput="validateNumberInput(this)">
                    </div>
                </div>
            </div>

            <!-- Buttons -->
            <div class="flex space-x-4">
                <button type="button" onclick="window.location.href='/lihatKreditUmroh'" class="flex-1 border border-green-800 text-green-800 py-2 px-4 rounded-md mt-4" style="border-color: #5D8736; color: #5D8736;">Batal</button>
                <button type="submit" class="flex-1 text-white py-2 px-4 rounded-md mt-4" style="background-color: #5D8736;">Simpan</button>
            </div>
        </form>
    </div>
</body>
</html>