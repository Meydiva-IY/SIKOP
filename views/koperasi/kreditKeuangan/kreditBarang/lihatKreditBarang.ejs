<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Data Kredit Barang</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body class="flex bg-gray-100">
    <!-- Sidebar -->
    <div class="w-72 text-white min-h-screen p-4 fixed" style="background-color: #5D8736;">
        <div class="flex items-center mb-8">
            <img src="/images/logo.png" alt="Logo" class="w-16 h-16 mr-7">
            <div>
                <h1 class="text-2xl font-bold">SIKOP</h1>
                <p class="text-sm">Sistem Informasi Koperasi</p>
            </div>
        </div>
        <nav>
            <ul>
                <li class="mb-4">
                    <a href="/dashboardKeuangan" class="flex items-center block p-6 py-3 hover:bg-green-900 rounded">
                        <img src="/images/vectordasbor.png" alt="lihat data icon" class="w=5 h-5 ">
                        <span class="ml-2 text-xl ml-5">Dashboard</span>
                    </a>
                </li>
                <li class="mb-4">
                    <a href="/simpanan" class="flex items-center block p-6 py-3 hover:bg-green-900 rounded">
                    <span class="material-icons">account_balance_wallet</span>
                    <span class="ml-2 text-xl ml-5">Simpanan</span>
                    </a>
                </li>
                <li class="mb-4">
                    <a href="/kredit-barang" class="flex items-center block p-6 py-3 hover:bg-green-900 rounded">
                    <span class="material-icons">credit_card</span>
                    <span class="ml-2 text-xl ml-5">Pinjaman</span>
                    </a>
                </li>
                <li>
                    <button onclick="toggleDropdown()" class="flex items-center justify-between w-full focus:outline-none">
                        <div class="flex items-center">
                            <a href="#" class="flex items-center block p-6 py-3">
                                <span class="material-icons">attach_money</span>
                                <span class="ml-2 text-xl ml-5">Kredit</span>
                            </a>
                        </div>
                        <img src="/images/angle-small-down.png" alt="dropdown icon" class="w-6 h-6 transform transition-transform" id="dropdownIcon">
                    </button>
                    <ul id="dropdownMenu" class="pl-6 hidden">
                        <li class="mb-2">
                            <a href="/kredit-barang" class="block p-3 py-3 text-lg hover:bg-green-900 rounded">Kredit Barang</a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="block p-3 py-3 text-lg hover:bg-green-900 rounded">Kredit Elektronik</a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="block p-3 py-3 text-lg hover:bg-green-900 rounded">Kredit Motor</a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="block p-3 py-3 text-lg hover:bg-green-900 rounded">Kredit Umroh</a>
                        </li>
                    </ul>
                </li>
            </ul>
        </nav>
    </div>

    <script>
        function toggleDropdown() {
            const dropdownMenu = document.getElementById('dropdownMenu');
            dropdownMenu.classList.toggle('hidden');
        }
    </script>

    <!-- Main Content -->
    <div class="flex-1 p-6 ml-72">
        <header class="flex justify-between items-center mb-8">
            <!-- Arrow Back Icon -->
            <button class="text-gray-600">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
                    <path d="M19 12H5" />
                    <path d="M12 5l-7 7 7 7" />
                </svg>
            </button>
            
            <!-- Profile Section -->
            <div class="flex items-center space-x-4">
                <span>admin</span>
                <img src="/images/profile-user.png" alt="User" class="rounded-full w-10 h-10">
            </div>
        </header>
        <div class="flex justify-between items-center mb-4">
            <h1 class="text-2xl font-bold">Data Kredit Barang</h1>
            <a href="/tambahKreditBarang" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700">
                + Tambah Kredit Baru
            </a>
        </div>

        <div class="bg-white p-4 rounded shadow">
            <div class="flex mb-4">
                <input type="text" placeholder="Cari Anggota" class="border border-gray-300 p-2 rounded flex-1" />
                <button style="background-color: #5D8736; color: white;" class="ml-2 px-4 py-2 rounded hover:bg-[#4c6e2f]">Cari</button>
            </div>


            <table class="table-auto w-full border-collapse shadow-lg rounded-lg overflow-hidden">
                <thead style="background-color: #5D8736; color: white;">
                    <tr>
                        <th class="p-4">No</th>
                        <th class="p-4">Nama Anggota</th>
                        <th class="p-4">Harga Pokok</th>
                        <th class="p-4">Jangka Waktu</th>
                        <th class="p-4">Pokok DP</th>
                        <th class="p-4">Total Angsuran</th>
                        <th class="p-4">Pokok</th>
                        <th class="p-4">Margin</th>
                        <th class="p-4">Angsuran ke</th>
                        <th class="p-4">Sisa Piutang</th>
                        <th class="p-4">Tanggal Mulai</th>
                        <th class="p-4">Status</th>
                        <th class="p-4">Bayar</th>
                        <th class="p-4">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (data && data.length > 0) { %>
                        <% data.forEach((item, index) => { %>
                            <tr class="border-b hover:bg-[#A4C68C] transition duration-200">

                                <td class="p-4 text-center"><%= index + 1 %></td>
                                <td class="p-4"><%= item.nama_anggota %></td>
                                <td class="p-4 text-right">Rp <%= item.harga_pokok ? item.harga_pokok.toLocaleString('id-ID') : '0' %></td>
                                <td class="p-4 text-center"><%= item.jangka_waktu %> Bulan</td>
                                <td class="p-4 text-right">Rp <%= item.pokok_dp ? item.pokok_dp.toLocaleString('id-ID') : '0' %></td>
                                <td class="p-4 text-right">Rp <%= item.total_angsuran ? item.total_angsuran.toLocaleString('id-ID') : '0' %></td>
                                <td class="p-4 text-right">Rp <%= item.pokok ? item.pokok.toLocaleString('id-ID') : '0' %></td>
                                <td class="p-4 text-right">Rp <%= item.margin ? item.margin.toLocaleString('id-ID') : '0' %></td>
                                <td class="p-4 text-center"><%= item.angsuran_ke || 0 %></td>
                                <td class="p-4 text-right">Rp <%= item.sisa_piutang ? item.sisa_piutang.toLocaleString('id-ID') : '0' %></td>
                                <td class="p-4 text-center"><%= item.tanggal_mulai ? new Date(item.tanggal_mulai).toLocaleDateString('id-ID') : '-' %></td>
                                <td class="p-4 text-center font-semibold <%= item.ket_status === 'Lunas' ? 'text-[#5D8736]' : 'text-red-700' %>"><%= item.ket_status || '-' %></td>
                                <td class="p-4">
                                    <a href="/bayarKreditBarang/<%= item.id %>" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-700">Bayar</a>
                                </td>
                                <td class="p-4">
                                    <div class="flex space-x-2">
                                        <!-- Tombol Edit -->
                                        <a href="/edit-kredit/<%= item.id %>" 
                                           class="flex items-center px-3 py-2 bg-blue-500 text-white rounded-lg shadow-md hover:bg-blue-600 transition duration-300">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
                                                <path d="M17.293 3.293a1 1 0 010 1.414L8.414 13.586a1 1 0 01-.293.207l-4 2a1 1 0 01-1.414-1.414l2-4a1 1 0 01.207-.293L15.293 3.293a1 1 0 011.414 0z"/>
                                            </svg>
                                            Edit
                                        </a>
                                
                                        <!-- Tombol Hapus -->
                                        <button onclick="hapusKredit('<%= item.id %>')"
                                            class="flex items-center px-3 py-2 bg-red-500 text-white rounded-lg shadow-md hover:bg-red-600 transition duration-300">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
                                                <path fill-rule="evenodd" d="M7 4a1 1 0 011-1h4a1 1 0 011 1h4a1 1 0 110 2H4a1 1 0 110-2h3zM5 7a1 1 0 011-1h8a1 1 0 011 1v8a1 1 0 01-1 1H6a1 1 0 01-1-1V7z" clip-rule="evenodd"/>
                                            </svg>
                                            Hapus
                                        </button>
                                    </div>
                                </td>
                
                            </tr>
            
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="14" class="p-4 text-center">Tidak ada data Kredit Barang</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <script>
        function hapusKredit(id) {
            if (confirm("Apakah Anda yakin ingin menghapus data ini?")) {
                fetch(`/kredit-barang/${id}`, {
                    method: "DELETE"
                })
                .then(response => {
                    if (response.ok) {
                        document.getElementById(`row-${id}`).remove();
                        alert("Data berhasil dihapus!");
                    } else {
                        alert("Gagal menghapus data!");
                    }
                })
                .catch(error => console.error("Error:", error));
            }
        }
    </script>


</body>
</html>
