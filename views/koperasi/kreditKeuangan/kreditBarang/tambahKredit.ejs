<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Form Input Kredit Barang</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="flex">
    <!-- Sidebar -->
    <div class="w-72 text-white min-h-screen p-4 fixed" style="background-color: #5D8736;">
        <div class="flex items-center mb-8">
            <img src="/images/logo.png" alt="Logo" class="w-16 h-16 mr-7">
            <div>
                <h1 class="text-2xl font-bold">SIKOP</h1>
                <p class="text-sm">Sistem Informasi Koperasi</p>
            </div>
        </div>
        <nav>
            <ul>
                <li class="mb-4">
                    <a href="/views/koperasi/dashboardKeuangan.ejs" class="flex items-center block p-6 py-3 hover:bg-green-900 rounded">
                        <img src="/images/vectordasbor.png" alt="lihat data icon" class="w=5 h-5 ">
                        <span class="ml-2 text-xl ml-5">Dashboard</span>
                    </a>
                </li>
                <li class="mb-4">
                    <a href="/views/koperasi/simpananKeuangan/lihatSimpanan.ejs" class="flex items-center block p-6 py-3 hover:bg-green-900 rounded">
                    <span class="material-icons">account_balance_wallet</span>
                    <span class="ml-2 text-xl ml-5">Simpanan</span>
                    </a>
                </li>
                <li class="mb-4">
                    <a href="/views/koperasi/pinjamankeuangan/lihatPinjaman.ejs" class="flex items-center block p-6 py-3 hover:bg-green-900 rounded">
                    <span class="material-icons">credit_card</span>
                    <span class="ml-2 text-xl ml-5">Pinjaman</span>
                    </a>
                </li>
                <li>
                    <button onclick="toggleDropdown()" class="flex items-center justify-between w-full focus:outline-none">
                        <div class="flex items-center">
                            <a href="#" class="flex items-center block p-6 py-3">
                                <span class="material-icons">attach_money</span>
                                <span class="ml-2 text-xl ml-5">Kredit</span>
                            </a>
                        </div>
                        <img src="/images/angle-small-down.png" alt="dropdown icon" class="w-6 h-6 transform transition-transform" id="dropdownIcon">
                    </button>
                    <ul id="dropdownMenu" class="pl-6 hidden">
                        <li class="mb-2">
                            <a href="/views/koperasi/kreditKeuangan/lihatKreditBarang.ejs" class="block p-3 py-3 text-lg hover:bg-green-900 rounded">Kredit Barang</a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="block p-3 py-3 text-lg hover:bg-green-900 rounded">Kredit Elektronik</a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="block p-3 py-3 text-lg hover:bg-green-900 rounded">Kredit Motor</a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="block p-3 py-3 text-lg hover:bg-green-900 rounded">Kredit Umroh</a>
                        </li>
                    </ul>
                </li>
            </ul>
        </nav>
    </div>

    <script>
        function toggleDropdown() {
            const dropdownMenu = document.getElementById('dropdownMenu');
            dropdownMenu.classList.toggle('hidden');
        }
    </script>

    <!-- Main Content -->
    <div class="flex-1 p-8">
        <h1 class="text-2xl mb-6">Form Input Kredit Barang</h1>

        <!-- Form Section -->
        <form class="space-y-6">
            <!-- Data Anggota -->
            <div class="bg-gray-100 p-6 rounded-lg">
                <h2 class="text-lg font-semibold mb-4">Data Anggota</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="block mb-2">No. Anggota</label>
                        <input type="text" class="w-full border p-2 rounded" placeholder="Masukkan No. Anggota">
                    </div>
                    <div>
                        <label class="block mb-2">Nama Anggota</label>
                        <input type="text" class="w-full border p-2 rounded" placeholder="Masukkan Nama Anggota">
                    </div>
                </div>
            </div>

            <!-- Data Kredit -->
            <div class="bg-gray-100 p-6 rounded-lg">
                <h2 class="text-lg font-semibold mb-4">Data Kredit</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="block mb-2">Harga Pokok</label>
                        <input type="number" class="w-full border p-2 rounded" placeholder="Masukkan Harga Pokok">
                    </div>
                    <div>
                        <label class="block mb-2">Jangka Waktu (Bulan)</label>
                        <input type="number" class="w-full border p-2 rounded" placeholder="Masukkan Jangka Waktu">
                    </div>
                    <div>
                        <label class="block mb-2">Pokok DP (Angsuran 1)</label>
                        <input type="number" class="w-full border p-2 rounded" placeholder="Masukkan Pokok DP">
                    </div>
                    <div>
                        <label class="block mb-2">Margin (%)</label>
                        <input type="number" class="w-full border p-2 rounded" placeholder="Masukkan Margin">
                    </div>
                    <div>
                        <label class="block mb-2">Tanggal Perjanjian</label>
                        <input type="date" class="w-full border p-2 rounded">
                    </div>
                    <div>
                        <label class="block mb-2">Keterangan</label>
                        <textarea class="w-full border p-2 rounded" placeholder="Masukkan Keterangan"></textarea>
                    </div>
                </div>
            </div>

            <!-- Hasil Perhitungan -->
            <div class="bg-blue-100 p-6 rounded-lg">
                <h2 class="text-lg font-semibold mb-4">Hasil Perhitungan</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="block mb-2">Angsuran Pokok</label>
                        <input type="number" class="w-full border p-2 rounded" placeholder="Masukkan Angsuran Pokok">
                    </div>
                    <div>
                        <label class="block mb-2">Margin per Bulan</label>
                        <input type="number" class="w-full border p-2 rounded" placeholder="Masukkan Margin per Bulan">
                    </div>
                    <div>
                        <label class="block mb-2">Total Angsuran per Bulan</label>
                        <input type="number" class="w-full border p-2 rounded" placeholder="Masukkan Total Angsuran">
                    </div>
                    <div>
                        <label class="block mb-2">Total Margin</label>
                        <input type="number" class="w-full border p-2 rounded" placeholder="Masukkan Total Margin">
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex justify-end space-x-4">
                <button type="reset" class="bg-gray-400 text-white px-4 py-2 rounded">Batal</button>
                <button type="submit" class="bg-green-500 text-white px-4 py-2 rounded">Simpan</button>
            </div>
        </form>
    </div>
</body>
</html>
