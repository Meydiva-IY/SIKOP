<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Form Input Kredit Barang Elektronik</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

</head>
<body class="flex">
    <!-- Sidebar -->
    <%- include('../../../sidebar') %>

    <!-- Main Content -->
    <div class="flex-1 p-8 ml-72">
        <h1 class="text-2xl mb-6">Form Input Kredit Elektronik</h1>

        <!-- Form Section -->
        <form action="/kreditElektronik/edit/<%= kredit.id %>" method="POST" class="space-y-6">
            <div class="bg-gray-100 p-6 rounded-lg">
              <h2 class="text-lg font-semibold mb-4">Data Anggota</h2>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <label class="block mb-2">No. Anggota</label>
                  <input type="text" name="id_anggota" value="<%= kredit.id_anggota %>" class="w-full border p-2 rounded" readonly>
                </div>
                <div>
                  <label class="block mb-2">Nama Anggota</label>
                  <input type="text" value="<%= kredit.nama_anggota %>" class="w-full border p-2 rounded" readonly>
                </div>
              </div>
            </div>
            <div class="bg-gray-100 p-6 rounded-lg">
              <h2 class="text-lg font-semibold mb-4">Data Kredit Elektronik</h2>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <label class="block mb-2">Pinjaman</label>
                  <input type="number" name="jumlah_pinjaman" value="<%= kredit.jumlah_pinjaman %>" class="w-full border p-2 rounded" required>
                </div>
                <div>
                  <label class="block mb-2">Jangka Waktu (Bulan)</label>
                  <input type="number" name="jangka_waktu" value="<%= kredit.jangka_waktu %>" class="w-full border p-2 rounded" required>
                </div>
                <div>
                  <label class="block mb-2">Margin (%)</label>
                  <input type="number" name="margin_persen" value="<%= kredit.margin_persen %>" class="w-full border p-2 rounded" required>
                </div>
                <div>
                  <label class="block mb-2">Tanggal Perjanjian</label>
                  <input type="date" name="tanggal_mulai" value="<%= kredit.tanggal_mulai.toISOString().split('T')[0] %>" class="w-full border p-2 rounded" required>
                </div>
              </div>
            </div>
            <div class="flex justify-end space-x-4">
              <button type="button" onclick="window.location.href='/lihatKreditElektronik'" class="bg-gray-400 text-white px-4 py-2 rounded">Batal</button>
              <button type="submit" class="bg-green-500 text-white px-4 py-2 rounded">Simpan</button>
            </div>
          </form>
    </div>
</body>
</html>
