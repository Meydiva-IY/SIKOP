<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Data Kredit Elektronik</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body class="flex bg-gray-100">
    <!-- Sidebar -->
    <%- include('../../../sidebar') %>

    <!-- Main Content -->
    <div class="flex-1 ml-72">
        <div class="fixed top-0 left-72 right-0 flex justify-between shadow-md p-4 bg-white z-20">
            <h1 class="text-2xl"></h1>
            <div class="flex items-center">
                <span>Admin Keuangan</span>
                <img src="/images/profile-user.png" class="w-10 h-10 rounded-full ml-2">
            </div>
        </div>

        <div class="flex-1 p-8 mt-12">
            <!-- Fixed Search and Filter -->
            <div class="fixed top-16 left-72 right-0 bg-gray-100 z-10 p-4">
                <div class="text-center mb-4">
                    <h2 class="text-2xl font-bold mt-4 mb-6">Data Kredit Elektronik</h2>
                </div>

                <div class="flex justify-between mb-3">
                    <div class="flex space-x-2">
                        <input type="text" id="searchInput" placeholder="Cari Anggota" class="px-3 py-1 border rounded-md focus:outline-none">
                        <button onclick="cariAnggota()" class="text-white px-3 py-1 rounded-md focus:outline-none" style="background-color: #5D8736;">
                            <span class="material-icons">search</span>
                        </button>
                    </div>
                    <!-- Tombol Tambah Pinjaman Baru -->
                    <a href="/pinjaman/tambah" class="text-white px-3 py-1 rounded flex items-center space-x-1" style="background-color: #5D8736;">
                        <span class="material-icons">add</span>
                        <span>Tambah Kredit Baru</span>
                    </a>
                </div>
            </div>

            <!-- Scrollable Table -->
            <div class="bg-white rounded-lg shadow overflow-x-auto mt-36" style="max-height: calc(100vh - 280px); overflow-y: auto;">
                <table class="w-full">
                    <thead style="position: sticky; top: 0; z-index: 5; background-color: #5D8736;">
                        <tr>
                            <th class="px-6 py-3 text-left text-white">No.</th>
                            <th class="px-6 py-3 text-left text-white">No Anggota</th>
                            <th class="px-6 py-3 text-left text-white">Nama Anggota</th>
                            <th class="px-6 py-3 text-left text-white">Kategori</th>
                            <th class="px-6 py-3 text-left text-white">Jumlah Pinjaman</th>
                            <th class="px-6 py-3 text-left text-white">Jangka Waktu</th>
                            <th class="px-6 py-3 text-left text-white">Margin Persen</th>
                            <th class="px-6 py-3 text-left text-white">Angsuran Pokok</th>
                            <th class="px-6 py-3 text-left text-white">Angsuran Margin</th>
                            <th class="px-6 py-3 text-left text-white">Total Angsuran</th>
                            <th class="px-6 py-3 text-left text-white">Angsuran Ke</th>
                            <th class="px-6 py-3 text-left text-white">Sisa Piutang</th>
                            <th class="px-6 py-3 text-left text-white">Tanggal Perjanjian</th>
                            <th class="px-6 py-3 text-left text-white">Status</th>
                            <th class="px-6 py-3 text-left text-white">Bayar</th>
                            <th class="px-6 py-3 text-left text-white">Aksi</th>
                        </tr>
                    </thead>
                    <tbody id="kreditElektronikTableBody">
                        <% if (kreditElektronik && kreditElektronik.length > 0) { %>
                            <% kreditElektronik.forEach((kredit, index) => { %>
                                <tr class="border-b border-gray-200">
                                    <td class="p-4"><%= index + 1 %></td>
                                    <td class="p-4"><%= kredit.id_anggota %></td>
                                    <td class="p-4"><%= kredit.nama_anggota %></td>
                                    <td class="p-4"><%= kredit.jumlah_pinjaman.toLocaleString() %></td>
                                    <td class="p-4"><%= kredit.jangka_waktu %></td>
                                    <td class="p-4"><%= kredit.total_angsuran.toLocaleString() %></td>
                                    <td class="p-4"><%= kredit.pokok.toLocaleString() %></td>
                                    <td class="p-4"><%= kredit.margin.toLocaleString() %></td>
                                    <td class="p-4"><%= kredit.angsuran_ke %></td>
                                    <td class="p-4"><%= kredit.sisa_piutang.toLocaleString() %></td>
                                    <td class="p-4"><%= kredit.tanggal_mulai.toLocaleDateString() %></td>
                                    <td class="p-4"><%= kredit.ket_status %></td>
                                    <td class="p-4">
                                        <button class="bg-green-600 text-white px-2 py-1 rounded hover:bg-green-700">Bayar</button>
                                    </td>
                                    <td class="p-4 flex space-x-2">
                                        <button class="bg-blue-600 text-white p-2 rounded hover:bg-blue-700" title="Edit">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                <path d="M12 20h9" />
                                                <path d="M16.5 3.5a2.121 2.121 0 113 3L7 19l-4 1 1-4 12.5-12.5z" />
                                            </svg>
                                        </button>
                                        <button class="bg-red-600 text-white p-2 rounded hover:bg-red-700" title="Hapus">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                            </svg>
                                        </button>
                                    </td>
                                </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </body>
            </html>