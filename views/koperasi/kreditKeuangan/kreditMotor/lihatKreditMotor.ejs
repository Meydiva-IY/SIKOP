<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Data Kredit Motor</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body class="flex bg-gray-100">
    <!-- Sidebar -->
    <%- include('../../../sidebar') %>

    <!-- Main Content -->
    <div class="flex-1 p-6 ml-72">
        <header class="flex justify-between items-center mb-8">
            <!-- Arrow Back Icon -->
            <button class="text-gray-600">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
                    <path d="M19 12H5" />
                    <path d="M12 5l-7 7 7 7" />
                </svg>
            </button>
            
            <!-- Profile Section -->
            <div class="flex items-center space-x-4">
                <span>admin keuangan</span>
                <img src="/images/profile-user.png" alt="User" class="rounded-full w-10 h-10">
            </div>
        </header>
        <div class="flex justify-between items-center mb-4">
            <h1 class="text-2xl font-bold">Data Kredit Motor</h1>
            <a href="/kreditMotor/tambah" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700">
                + Tambah Kredit Baru
            </a>
        </div>

        <div class="bg-white p-4 rounded shadow">
            <div class="flex mb-4">
                <input type="text" placeholder="Cari Anggota" class="border border-gray-300 p-2 rounded flex-1" />
                <button style="background-color: #5D8736; color: white;" class="ml-2 px-4 py-2 rounded hover:bg-[#4c6e2f]">Cari</button>
            </div>

            <table class="table-auto w-full border-collapse shadow-lg rounded-lg overflow-hidden">
                <thead style="background-color: #5D8736; color: white;">
                    <tr>
                        <th class="p-4">No</th>
                        <th class="p-4">No. Anggota</th>
                        <th class="p-4">Nama Anggota</th>
                        <th class="p-4">Jumlah Pinjaman</th>
                        <th class="p-4">Jangka Waktu</th>
                        <th class="p-4">Margin Persen</th>
                        <th class="p-4">Angsuran Pokok</th>
                        <th class="p-4">Angsuran Margin</th>
                        <th class="p-4">Total Angsuran</th>
                        <th class="p-4">Angsuran Ke</th>
                        <th class="p-4">Sisa Piutang</th>
                        <th class="p-4">Mulai Perjanjian</th>
                        <th class="p-4">Status</th>
                        <th class="p-4">Bayar</th>
                        <th class="p-4">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% kreditMotor.forEach((motor, index) => { %>
                    <tr class="text-left border-b">
                        <td class="p-4"><%= index + 1 %></td>
                        <td class="p-4"><%= motor.id_anggota %></td>
                        <td class="p-4"><%= motor.nama_anggota %></td>
                        <td class="p-4"><%= motor.jumlah_pinjaman.toLocaleString() %></td>
                        <td class="p-4"><%= motor.jangka_waktu %> Bulan</td>
                        <td class="p-4"><%= motor.margin_persen ? motor.margin_persen.toFixed(2) : '0.00' %>%</td>
                        <td class="p-4"><%= motor.pokok ? motor.pokok.toLocaleString() : '0' %></td>
                        <td class="p-4"><%= motor.margin ? motor.margin.toLocaleString() : '0' %></td>
                        <td class="p-4"><%= motor.total_angsuran ? motor.total_angsuran.toLocaleString() : '0' %></td>
                        <td class="p-4"><%= motor.angsuran_ke || 0 %></td>                                    
                        <td class="p-4"><%= motor.sisa_piutang.toLocaleString() %></td>
                        <td class="p-4"><%= motor.tanggal_mulai.toISOString().split('T')[0] %></td>
                        <td class="px-6 py-4">
                            <% if (motor.ket_status === 'Lunas') { %>
                                <span class="bg-green-100 text-green-800 px-2 py-1 rounded-full text-sm">Lunas</span>
                            <% } else { %>
                                <span class="bg-red-100 text-red-800 px-2 py-1 rounded-full text-sm">Belum Lunas</span>
                            <% } %>
                        </td>
                        <td class="p-4">
                            <button class="bg-green-600 text-white px-2 py-1 rounded hover:bg-green-700">Bayar</button>
                        </td>
                        <td class="p-4 flex space-x-2">
                            <a href="/kreditMotor/edit/<%= motor.id %>" class="bg-blue-600 text-white p-2 rounded hover:bg-blue-700" title="Edit">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M12 20h9" />
                                    <path d="M16.5 3.5a2.121 2.121 0 113 3L7 19l-4 1 1-4 12.5-12.5z" />
                                </svg>
                            </a>
                            <button class="bg-red-600 text-white p-2 rounded hover:bg-red-700" title="Hapus">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                </svg>
                            </button>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>