<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bayar Kredit Motor</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="flex bg-gray-100">
    <!-- Sidebar -->
    <%- include('../../../sidebar') %>

    <!-- Main Content -->
    <div class="flex-1 p-6 ml-72">
        <header class="flex justify-between items-center mb-8">
            <!-- Arrow Back Icon -->
            <button class="text-gray-600" onclick="window.history.back()">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
                    <path d="M19 12H5" />
                    <path d="M12 5l-7 7 7 7" />
                </svg>
            </button>
            
            <!-- Profile Section -->
            <div class="flex items-center space-x-4">
                <span>admin keuangan</span>
                <img src="/images/profile-user.png" alt="User" class="rounded-full w-10 h-10">
            </div>
        </header>
        <div class="flex justify-between items-center mb-4">
            <h1 class="text-2xl font-bold">Bayar Kredit Motor</h1>
        </div>

        <div class="bg-white p-4 rounded shadow">
            <!-- Informasi Kredit Motor -->
            <div class="bg-blue-100 p-4 rounded-lg mb-6">
                <h2 class="text-lg font-semibold mb-2">Informasi Kredit Motor</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <p><strong>No. Anggota:</strong> <%= kreditMotor.id_anggota %></p>
                    <p><strong>Nama Anggota:</strong> <%= kreditMotor.nama_anggota %></p>
                    <p><strong>Jumlah Pinjaman:</strong> <%= kreditMotor.jumlah_pinjaman.toLocaleString() %></p>
                    <p><strong>Jangka Waktu:</strong> <%= kreditMotor.jangka_waktu %> Bulan</p>
                    <p><strong>Angsuran Ke:</strong> <%= kreditMotor.angsuran_ke %> dari <%= kreditMotor.jangka_waktu %></p>
                    <p><strong>Sisa Piutang:</strong> <%= kreditMotor.sisa_piutang.toLocaleString() %></p>
                    <p><strong>Total Angsuran:</strong> <%= kreditMotor.total_angsuran.toLocaleString() %></p>
                    <p><strong>Status:</strong> <%= kreditMotor.ket_status %></p>
                </div>
            </div>

            <!-- Form Pembayaran -->
            <div class="bg-green-100 p-4 rounded-lg mb-6">
                <h2 class="text-lg font-semibold mb-2">Form Pembayaran</h2>
                <form action="/kreditMotor/bayar/<%= kreditMotor.id %>" method="POST" class="space-y-4">
                    <div>
                        <label for="tanggal_bayar" class="block mb-2">Tanggal Pembayaran</label>
                        <input type="date" id="tanggal_bayar" name="tanggal_bayar" class="w-full border p-2 rounded" required>
                    </div>
                    <div>
                        <label for="jumlah_bayar" class="block mb-2">Jumlah Bayar</label>
                        <input type="number" id="jumlah_bayar" name="jumlah_bayar" class="w-full border p-2 rounded" placeholder="Masukkan jumlah bayar" required>
                    </div>
                    <div>
                        <label for="keterangan" class="block mb-2">Keterangan</label>
                        <textarea id="keterangan" name="keterangan" class="w-full border p-2 rounded" placeholder="Masukkan keterangan"></textarea>
                    </div>
                    <div class="flex justify-end">
                        <button type="submit" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600">Simpan Pembayaran</button>
                    </div>
                </form>
            </div>

            <!-- Riwayat Pembayaran -->
            <div class="bg-gray-100 p-4 rounded-lg">
                <h2 class="text-lg font-semibold mb-2">Riwayat Pembayaran</h2>
                <table class="w-full text-left border">
                    <thead>
                        <tr class="bg-gray-200">
                            <th class="border px-4 py-2">Tanggal</th>
                            <th class="border px-4 py-2">Angsuran Ke</th>
                            <th class="border px-4 py-2">Jumlah</th>
                            <th class="border px-4 py-2">Keterangan</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% pembayaran.forEach((bayar) => { %>
                        <tr>
                            <td class="border px-4 py-2"><%= bayar.tanggal_bayar.toISOString().split('T')[0] %></td>
                            <td class="border px-4 py-2"><%= bayar.angsuran_ke %></td>
                            <td class="border px-4 py-2"><%= bayar.jumlah_bayar.toLocaleString() %></td>
                            <td class="border px-4 py-2"><%= bayar.ket %></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>